<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

    <!-- Google Map -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout="@layout/layout_map_preview"
        tools:ignore="UnknownFragments" />

    <!-- Back button (top-left) -->

    <!-- Vertical three-dots button (top-right) to toggle legend -->

    <!-- Legend card (hidden by default; shown when three-dots is tapped) -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/back_to_camera"
        app:layout_constraintStart_toStartOf="@id/map"
        app:layout_constraintTop_toTopOf="@id/map"
        app:srcCompat="@drawable/ic_arrow_back_24" />

    <!-- Notations + vertical 3-dots (top-right) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLegendToggle"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:minWidth="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingStart="14dp"
        android:paddingEnd="10dp"
        android:text="@string/legend_title"
        android:textSize="14sp"
        android:textColor="#202124"
        app:icon="@drawable/ic_more_vert_24"
        app:iconGravity="textEnd"
        app:iconPadding="6dp"
        app:iconSize="14dp"
        app:cornerRadius="20dp"
        app:strokeWidth="1dp"
        app:strokeColor="#22000000"
        app:backgroundTint="#EADDFF"
        app:iconTint="#202124"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <com.google.android.material.card.MaterialCardView
        android:id="@+id/legendCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:visibility="gone"
        app:cardBackgroundColor="#FFFFFFFF"
        app:cardElevation="6dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
        app:layout_constraintTop_toBottomOf="@id/btnLegendToggle"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:text="@string/legend_title"
                android:textColor="#202124"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Asphalt -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@color/asphalt_good" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/legend_asphalt_good"
                    android:textColor="#3C4043" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@color/asphalt_regular" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/legend_asphalt_regular"
                    android:textColor="#3C4043" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@color/asphalt_bad" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/legend_asphalt_bad"
                    android:textColor="#3C4043" />
            </LinearLayout>

            <!-- Paved -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="6dp">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@color/paved_regular" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/legend_paved_regular"
                    android:textColor="#3C4043" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@color/paved_bad" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/legend_paved_bad"
                    android:textColor="#3C4043" />
            </LinearLayout>

            <!-- Unpaved -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="6dp">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@color/unpaved_regular" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/legend_unpaved_regular"
                    android:textColor="#3C4043" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@color/unpaved_bad" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/legend_unpaved_bad"
                    android:textColor="#3C4043" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom info card (hidden by default) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/infoCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:visibility="gone"
        app:cardBackgroundColor="#FFFFFFFF"
        app:cardElevation="10dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/infoLine1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/classification"
                android:textColor="#202124"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/infoLine2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confidence"
                android:textColor="#3C4043"
                android:textSize="13sp"
                android:paddingTop="4dp" />

            <ImageView
                android:id="@+id/infoImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/road_image"
                android:visibility="gone" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Optional loading indicator -->
    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
